{
  "env": {
      "es6": true,
      "node": true,
      "commonjs": true
  },
	"extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "globals": {
    "it": true,
    "document": true
  },
	"plugins": [
    "react",
    "prettier"
	],
	"parser": "babel-eslint",
	"parserOptions": { 
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
	},
  "rules": {
    "react/jsx-filename-extension": [0, { "extensions": [".js", "jsx"] }],
    "react/prop-types": 0,
    "prettier/prettier": 2,
    "max-len": [2, 80],
    "import/named": 0,
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0
  },
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
					".js",
					".jsx"
				]
			}
		}
	}
}